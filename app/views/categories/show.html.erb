<div class="row">
  <div class="col-md-12">

    <h2 class="pull-left">Category</h2>
    
    <ul class="nav nav-pills pull-right" style="margin-top: 1em">
      <li>
        <%= link_to 'Edit', edit_category_path(@category) %> 
      </li>
      <li>
        <%= link_to 'Back', categories_path %>
      </li>
    </ul>
  </div>
</div>

<% if not notice.nil? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6">

    <table class="table table-striped table-bordered">
      <tr>
        <td width="150px"><b>Name:</b></td>
        <td><%= @category.name %></td>
      </tr>
    </table>

  </div>
</div>

<h3 class="caption">Books</h3>
<%= render 'books/list' %>
