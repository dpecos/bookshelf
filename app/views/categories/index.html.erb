<div class="row">
  <div class="col-md-12">

    <h2 class="pull-left">Category listing</h2>
    
    <ul class="nav nav-pills pull-right" style="margin-top: 1em">
      <li>
        <%= link_to 'New Category', new_category_path %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <table class="table table-striped">
      <thead>
        <tr>
          <th width="300px">Name</th>
          <th width="100px"></th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.name, category %></td>
          <td>
             <%= link_to category, :class => "btn btn-xs" do %>
               <span class="glyphicon glyphicon-tags"></span>
             <% end %>
             <%= link_to edit_category_path(category), :class => "btn btn-xs" do %>
               <span class="glyphicon glyphicon-pencil"></span>
             <% end %>
             <%= link_to category, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-xs" do %>
               <span class="glyphicon glyphicon-trash"></span>
             <% end %>
          </td>
         </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>

