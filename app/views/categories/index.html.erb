<div class="row">
  <div class="span12">

    <h2 class="pull-left">Listing categories</h2>
    
    <ul class="nav nav-pills pull-right" style="margin-top: 1em">
      <li>
        <%= link_to 'New Category', new_category_path %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="span6 offset3">

    <table class="table table-striped">
      <thead>
        <tr>
          <th width="300px">Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to 'Show', category, :class => "btn-small btn-success" %></td>
          <td><%= link_to 'Edit', edit_category_path(category) , :class => "btn-small btn-primary"%></td>
          <td><%= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn-small btn-danger" %></td>
         </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>

