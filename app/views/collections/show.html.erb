<div class="row">
  <div class="col-md-12">

    <h2 class="pull-left">Collection</h2>
    
    <ul class="nav nav-pills pull-right" style="margin-top: 1em">
      <li>
        <%= link_to 'Edit', edit_collection_path(@collection) %> 
      </li>
      <li>
        <%= link_to 'Back', collections_path %>
      </li>
    </ul>
  </div>
</div>

<% if not notice.nil? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6">

    <table class="table table-striped table-bordered">
      <tr>
        <td width="150px"><b>Name:</b></td>
        <td><%= @collection.name %></td>
      </tr>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-6">

    <table class="table table-striped table-bordered">
      <tr>
        <td width="150px"><b>Link:</b></td>
        <td><%= @collection.link %></td>
      </tr>
    </table>

  </div>
</div>

<div class="row">
  <div class="col-md-6">

    <table class="table table-striped table-bordered">
      <tr>
        <td width="150px"><b>Description:</b></td>
        <td><%= @collection.description %></td>
      </tr>
    </table>

  </div>
</div>

<%= render 'books/list' %>
