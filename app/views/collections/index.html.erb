<div class="row">
  <div class="span12">

    <h2 class="pull-left">Listing collections</h2>
    
    <ul class="nav nav-pills pull-right" style="margin-top: 1em">
      <li>
        <%= link_to 'New Collection', new_collection_path %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="span8 offset2">

    <table class="table table-striped">
      <thead>
        <tr>
          <th width="300px">Name</th>
          <th width="300px">Link</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @collections.each do |collection| %>
        <tr>
          <td><%= collection.name %></td>
          <td><%= collection.link %></td>
          <td><%= link_to 'Show', collection, :class => "btn-small btn-success" %></td>
          <td><%= link_to 'Edit', edit_collection_path(collection) , :class => "btn-small btn-primary"%></td>
          <td><%= link_to 'Destroy', collection, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn-small btn-danger" %></td>
         </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
