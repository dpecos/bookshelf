<div class="row">
  <div class="span12">

    <h2 class="pull-left">Full listing books</h2>
    
  </div>
</div>

<div class="row" id="full_page">
  <div class="span12">

    <table class="table table-striped">
      <thead>
        <tr>
          <th width="150px">Category</th>
          <th width="400px">Title</th>
          <th width="250px">Author</th>
          <th>Year</th>
          <th>Reading date</th>
          <th>Pages</th>
          <th>Editorial</th>
          <th>ISBN</th>
          <th>URL</th>
          <th>C</th>
          <th>A</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="center"><%= link_to book.category.name, book.category %></td>
          <td><%= link_to book.title, book %></td>
          <td><%= book.author %></td>
          <td class="right"><%= book.year %></td>
          <td class="right" style="white-space: nowrap"><%= book.reading_date %></td>
          <td class="right"><%= book.pages %></td>
          <td><%= book.editorial %></td>
          <td class="center"><%= truncate(book.isbn, :length => 10) %></td>
          <td><%= truncate(book.url, :length => 15) %></td>
          <td class="center"><% if not book.cover.nil? %>&#10004;<% end %></td>
          <td class="center"><% if not book.abstract.nil? %>&#10004;<% end %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>

<script>
  $(document).ready(function() {
    $('#full_page').parent().attr('style', 'width: 95%');
    $('#full_page .span12').attr('style', 'width: 100%');
  });
</script>
